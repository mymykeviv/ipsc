{
  "name": "profitpath-frontend",
  "version": "1.5.0",
  "build_date": "2024-01-15",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc --noEmit && vite build",
    "preview": "vite preview",
    "test": "NODE_OPTIONS='--max-old-space-size=8192' vitest run",
    "test:critical": "NODE_OPTIONS='--max-old-space-size=8192' vitest run --run --reporter=basic --no-coverage --pool=forks --poolOptions.forks.singleFork=true --poolOptions.forks.maxForks=1",
    "test:minimal": "NODE_OPTIONS='--max-old-space-size=8192' vitest run --run --reporter=basic --no-coverage --pool=forks --poolOptions.forks.singleFork=true --poolOptions.forks.maxForks=1 --include='src/components/StockHistoryForm.test.tsx'",
    "test:watch": "vitest",
    "lint": "eslint src/**/*.{ts,tsx} --max-warnings 0",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test tests/e2e/ui-fixes.spec.ts",
    "test:e2e:stories": "playwright test tests/e2e/story-*.spec.ts",
    "test:e2e:all": "playwright test tests/e2e/",
    "test:report": "playwright show-report",
    "test:install": "playwright install --with-deps chromium firefox",
    "clean": "find src -name '*.js' -type f -delete && echo 'âœ… Cleaned compiled JavaScript files'",
    "prebuild": "npm run clean"
  },
  "dependencies": {
    "@ant-design/icons": "^6.0.0",
    "@types/jest": "^30.0.0",
    "antd": "^5.27.1",
    "axios": "^1.6.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.5.1",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^8.5.0",
    "@typescript-eslint/parser": "^8.5.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.9.1",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.9",
    "globals": "^15.9.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^21.1.1",
    "playwright": "^1.54.2",
    "typescript": "^5.2.2",
    "vite": "^7.1.3",
    "vitest": "^3.2.4"
  }
}
