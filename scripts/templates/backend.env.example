# Backend environment file for packaged production
# Copy to backend/.env inside package and adjust as needed

ENVIRONMENT=production
HOST=127.0.0.1
PORT=8000
LOG_LEVEL=INFO

# Database (default SQLite local file)
DATABASE_TYPE=sqlite
DATABASE_URL=sqlite:///./profitpath.db

# Feature flags
MULTI_TENANT_ENABLED=false
SECURITY_ENABLED=true
DATABASE_OPTIMIZATION_ENABLED=true

# CORS (usually not needed when served behind nginx)
ALLOWED_ORIGINS=http://localhost:8080